@import "resource/styles/iconfont.wxss";
@import "resource/styles/loadmore.wxss";

/**app.wxss**/

page {
    background-color: #f4f8f7;
}

canvas {
    width: 200px;
    height: 200px;
    display: block;
    position: relative;
}

.container-flex {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    /* padding: 200rpx 0; */
    box-sizing: border-box;
}

/* 清除浮动 */

.clearfix:after {
    display: block;
    height: 0;
    clear: both;
    content: '';
}

.phcolor {
    /* placeholder颜色  */
    color: #afafaf73;
    font-size: 36rpx;
}

.pre-block {
    margin: 30rpx 30rpx;
    min-height: 48rpx;
}

/* font-style */

.font-title {
    font-size: 36rpx;
    font-weight: bold;
    line-height: 1.5;
}

.font-content {
    font-size: 32rpx;
    line-height: 1.5;
}

.font-item {
    font-size: 28rpx;
    line-height: 1.5;
}

.font-color-gray {
    color: #a1a1a1;
}

.font-color-blue {
    color: #5ad0e9;
}

.font-color-green {
    color: #0ac775;
}

.btn-color-green {
    background-color: #0ac775;
    color: #fff;
}

.font-color-red {
    color: red;
}

.font-emu {
    padding: 5rpx;
    margin-right: 10rpx;
    background-color: #f0f0f0;
    border-radius: 5rpx;
}
