.container {
    margin: 30rpx 20rpx 15rpx 20rpx;
}

.container:last-child {
    margin: 15rpx 30rpx 15rpx 30rpx;
}

.container .fliters-nav {
    display: flex;
    justify-content: space-around;
    font-size: 36rpx;
    line-height: 64rpx;
}

.container .fliters-nav .fliters-item {
    padding: 7rpx 25rpx;
    border-radius: 10rpx;
    text-align: center;
    width: 300rpx;
}

.container .fliters-nav icon {
    font-size: 36rpx;
    color: red;
}

.container .fliters-nav .fliters-item-selected {
    color: #fff;
    background: #00bc71;
}

.container .fliters-nav .fliters-item-selected icon {
    color: #fff;
    background: #00bc71;
}

.pre-list {
    margin: 0 0 30rpx 0;
}

.pre-list-item {
    display: flex;
    border: 0rpx solid #dfdfdf;
    border-radius: 10rpx;
    padding: 10rpx 10rpx;
    margin-bottom: 10rpx;
    background-color: #fff;
}

.pre-list-item .pre-list-item__icon {
    display: flex;
    align-items: center;
    margin-right: 10rpx;
}

.pre-list-item .pre-list-item__icon icon {
    font-size: 42rpx;
    color: #bfbfbf;
}

.pre-list-item-img {
    width: 200rpx;
    height: 200rpx;
}

.pre-list-item-img image {
    width: 100%;
    height: 100%;
}

.pre-list-item-content {
    display: flex;
    flex-direction: column;
    flex: 1;
    justify-content: space-between;
    margin: 0 10rpx;
}

.pre-list-item-content .content-title {
    font-size: 28rpx;
    margin-bottom: 5rpx;
}

.pre-list-item-content .content-item {
    font-size: 20rpx;
    color: gray;
}

.pre-list-item-content .content-price {
    font-size: 28rpx;
    color: red;
    margin-top: 5rpx;
}

.pre-list-item-button-group {
    display: flex;
    /* flex-direction: column; */
    justify-content: space-between;
    align-items: flex-end;
    padding-right: 5rpx;
    margin-right: 10rpx;
    margin-bottom: 10rpx;
}

.pre-list-item-button-group icon {
    font-size: 36rpx;
    color: red;
}

.pre-list-item-button-group button {
    font-size: 18rpx;
}

/*主容器*/

.stepper {
    display: flex;
    justify-content: space-around;
    align-content: center;
    width: 140rpx;
    height: 50rpx;
    border: 1rpx solid #ccc;
    border-radius: 10rpx;
}

/*加号和减号*/

.stepper__text {
    display: flex;
    align-items: center;
    justify-content: center;
    flex: 1;
}

.stepper__text text {
    font-size: 30rpx;
}

.stepper__input {
    flex: 2;
    display: flex;
    align-items: center;
    justify-content: center;
    border-right: 1rpx solid #ccc;
    border-left: 1rpx solid #ccc;
}

.stepper__input input {
    text-align: center;
    font-size: 24rpx;
}

/*普通样式*/

.stepper .normal {
    color: black;
}

/*禁用样式*/

.stepper .disabled {
    color: #ccc;
}
