<!-- 图片展示 -->
<view class="container container-flex;">
    <view style='width:690rpx;height:690rpx'>
        <image src="{{app.globalData.imgPrefix}}{{product.Picpath}}" mode='aspectFit' class="" style='width:100%;height:100%' />
    </view>
    <!-- 产品基础信息 -->
    <view style='display:flex;flex-direction:column;align-items:center;margin:15rpx 0'>
        <text style='font-size:36rpx;'>{{product.Name}}</text>
        <text style='color:red'>￥{{product.Price}}</text>
    </view>
    <!-- 服务条款 -->
    <view style='font-size:28rpx;'>
        <view style='margin:15rpx 0'>
            <text>本产品可享受指定日期发货服务，请在订单中确认。</text>
        </view>
        <view style='margin:5rpx 0'>
            <text style='font-weight:bold;'>特别提醒：</text>
            <text style='color:#757575'>仅限联邦快递24小时可达地区，为方便物流的跟踪，请务必填写收件地址的正确邮编，以免造成投递失败。</text>
        </view>
        <view style='margin-top:20rpx;display:flex;justify-content:space-between;'>
            <text>快递：￥23.00</text>
            <text>产地：{{product.Dvadd}}</text>
        </view>
    </view>
</view>
<!-- 质量保障 -->
<view style='font-size:30rpx;margin-bottom:130rpx;'>
    <view style='margin:30rpx 0;height:100rpx;line-height:100rpx;background-color:#fff'>
        <view style='padding:0 30rpx;display:flex;justify-content:space-between;'>
            <view>
                <icon class="iconfont icon-ok" style='font-size:36rpx;margin-right:10rpx;'></icon>
                <text>正品保障</text>
            </view>
            <text>站点：{{product.Ssite}}</text>
        </view>
    </view>
</view>
<!-- 底部菜单栏 -->
<view style='position:fixed;bottom:0;width:100%;display:flex;border-top:1rpx solid #ceced0; background-color:#f7f7fa'>
    <view style='width:125rpx;display:flex;flex-direction:column;justify-content:center;align-items:center'>
        <icon class="iconfont icon-kefu" style='font-size:50rpx;'></icon>
        <text style='font-size:28rpx;padding:2rpx'>客服</text>
    </view>
    <view style='width:125rpx;display:flex;flex-direction:column;justify-content:center;align-items:center'>
        <icon class="iconfont icon-follow" style='font-size:40rpx;'></icon>
        <text style='font-size:28rpx;padding:2rpx'>关注</text>
    </view>
    <view style='width:500rpx;height:100rpx;display:flex;justify-content:space-between'>
        <button style='color:#fff;background-color:#00BC71;border-radius:0;font-size:32rpx;padding:10rpx 24rpx;width:250rpx'>加入购物车</button>
        <button style='color:#fff;background-color:#DD4A32;border-radius:0;font-size:32rpx;padding:10rpx 24rpx;width:250rpx'>立即购买</button>
    </view>
</view>