/* pages/products/products.wxss */

/* preImageList.wxss */
@import "../../resource/styles/preSearch.wxss";

.search_flex {
    display: flex;
}

.search_flex_input {
    flex: 1;
}

.search_flex_input input {
    margin-left: 0;
    color: #000;
    padding: 5rpx;
    height: 60rpx;
    border-radius: 5px;
    padding-left: 30rpx;
}

.search-filter {
    margin: 5rpx 20rpx 10rpx 20rpx;
    min-height: 48rpx;
}

.search-filter-nav {
    display: flex;
    justify-content: space-around;
    /* padding-bottom: 10rpx;*//* border-bottom: 1rpx solid #ecf1f0; */
}

.search-filter-item {
    padding: 0 20rpx 20rpx 20rpx;
}

.search-filter-item-selected {
    background-color: #fff;
    padding: 0 20rpx 20rpx 20rpx;
}

.search-filter-item-selected text {
    color: #7bcfb5;
}

.search-filter-item text {
    font-size: 28rpx;
}

.search-filter-item icon {
    font-size: 14rpx;
}

.search-filter-item icon.icon-big {
    font-size: 24rpx;
}

.search-filter-pop {
    /* position: fixed; */
    z-index: 1000;
}

.search-filter-pop-content {
    width: 670rpx;
    /* min-height: 400rpx; */
    background-color: #fff;
    margin: 0 auto;
    padding: 20rpx;
    border-radius: 10rpx;
}

.search-filter-pop-content .filter-item-title {
    font-size: 32rpx;
    margin: 12rpx;
}

.search-filter-pop-content .filter-item {
    display: inline-block;
    border: 1rpx solid #f0f0f0;
    background-color: #f0f0f06e;
    border-radius: 10rpx;
    margin: 10rpx 10rpx;
    padding: 0 20rpx;
}

.search-filter-pop-content .filter-item-selected {
    background-color: #7bcfb5;
}

.search-filter-pop-content .filter-item  text {
    font-size: 24rpx;
    line-height: 48rpx;
    word-wrap: break-word;
}

.search-filter-pop-content .filter-item-selected text {
    color: #fff;
}

.search-filter-pop-content .filter-pop-content-button-group {
    display: flex;
    margin-top: 20rpx;
}

.search-filter-pop-content .filter-pop-content-button-group button {
    width: 300rpx;
    font-size: 30rpx;
}

.search-filter-pop-content .filter-pop-content-button-group .btn-green {
    background-color: #7bcfb5;
    color: #fff;
    border: 1rpx solid #fff;
}

.search-nav {
    margin: 30rpx 30rpx 10rpx 30rpx;
    min-height: 48rpx;
}

.search-nav-icon {
    width: 48rpx;
    height: 48rpx;
    margin: 4rpx 10rpx;
}

.container {
    margin: 30rpx;
}

/* text {
  font-size: 32rpx;
} */

.text-red {
    color: red;
}

.pre-list {
    margin: 0 24rpx;
}

.pre-list-item {
    display: flex;
    border: 0rpx solid #dfdfdf;
    border-radius: 10rpx;
    padding: 10rpx 10rpx;
    margin-bottom: 10rpx;
    background-color: #fff;
}

.pre-list-item-img {
    width: 200rpx;
    height: 200rpx;
}

.pre-list-item-img image {
    width: 100%;
    height: 100%;
}

.pre-list-item-content {
    display: flex;
    flex-direction: column;
    flex: 1;
    justify-content: space-between;
    margin: 0 10rpx;
}

.pre-list-item-content .content-title {
    font-size: 28rpx;
    margin-bottom: 5rpx;
}

.pre-list-item-content .content-item {
    font-size: 20rpx;
    color: gray;
}

.pre-list-item-content .content-price {
    font-size: 28rpx;
    color: red;
    margin-top: 5rpx;
}

.pre-list-item-button-group {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-end;
    padding-right: 5rpx;
    margin-right: 10rpx;
    margin-bottom: 10rpx;
}

.pre-list-item-button-group icon {
    font-size: 28rpx;
}

.pre-list-item-button-group button {
    font-size: 18rpx;
}

.pre-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    margin: 0 20rpx;
}

.pre-grid-item {
    width: 327rpx;
    padding: 10rpx;
    margin: 0 0 10rpx 0;
    background-color: #fff;
    border: 0rpx solid #dfdfdf;
    border-radius: 10rpx;
}

.pre-grid-item-img {
    width: 325rpx;
    height: 200rpx;
}

.pre-grid-item-img image {
    width: 100%;
    height: 100%;
}

.pre-grid-item-content {
    display: flex;
    height: 120rpx;
    width: 325rpx;
}

.pre-grid-item-content-text {
    display: flex;
    flex-direction: column;
    flex: 1;
    justify-content: space-around;
    align-items: flex-start;
    margin: 0 10rpx;
}

.pre-grid-item-content-text text {
    font-size: 28rpx;
}

.pre-grid-item-content-button {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-end;
}

.pre-grid-item-content-button icon {
    font-size: 28rpx;
}

.pre-grid-item-content-button button {
    font-size: 18rpx;
}
