.container {
    margin: 30rpx 30rpx 15rpx 30rpx;
}

.container .list-title {
    font-size: 32rpx;
    border-bottom: 1rpx solid #e4e8ea;
    padding-bottom: 10rpx;
}

.container-items {
    background-color: #fff;
    padding: 0 15rpx;
    border-radius: 5rpx;
}

.container-items .items-group {
    padding: 20rpx 0;
    border-bottom: 1rpx solid #f0f0f0;
}

.container-items .items-group:last-child {
    border-bottom: 0rpx solid #f0f0f0;
}

.container-items .items-group-flex {
    display: flex;
    flex-direction: column;
}

.container-items .items-group-flex-row {
    display: flex;
    flex-direction: flex-start;
    justify-content: space-between;
}

.container-items .items-group-flex .item-flex {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.container-items .items-group-flex .item-flex-padding {
    padding: 0 15rpx;
}

.container-items .items-group-flex .item-flex-padding text {
    flex: 1;
}

.container-items .items-group-flex-row .item-flex-title {
    display: flex;
    align-items: center;
}

.container-items .items-group-flex-row .item-flex-title text {
    margin: 0 10rpx;
}

.container-items .items-group-flex .item-flex-start {
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.container-items .items-group-flex .item-flex-column {
    display: flex;
    justify-content: space-between;
    flex-direction: column;
}

.container-items .items-group-flex .item-flex .item-flex-icon {
    margin-right: 30rpx;
    width: 32rpx;
}
