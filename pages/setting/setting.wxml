<!--pages/setting/setting.wxml-->
<navigator url="pages/{{page.id}}/{{page.id}}" class="navigator navigator-header-bg">
  <view class="navigator-text">
    <view class='navigator-text-item' style='font-size: 28rpx;margin-bottom:10rpx;'>账号：
      <text style=''>沈焕杰</text>
    </view>
    <view style='font-size: 28rpx;'>余额：
      <text style='color:red;'>2000元</text>
    </view>
  </view>
  <view class="navigator-arrow"></view>
</navigator>
<view class="index">
  <view class="index-bd">
    <view class="kind-list">
      <block wx:for-items="{{list}}" wx:key="{{item.id}}">
        <view class="kind-list-item">
          <view class="kind-list-item-bd kind-list-item-bd-show">
            <view class="navigator-box navigator-box-show">
              <block wx:for-items="{{item.pages}}" wx:for-item="page" wx:key="*item">
                <navigator url="../../pages/{{page.id}}/{{page.id}}" class="navigator">
                  <view class="navigator-text">{{page.name}}</view>
                  <view class="navigator-arrow"></view>
                </navigator>
              </block>
            </view>
          </view>
        </view>
      </block>
    </view>
  </view>
</view>

<view class='pre-block'>
  <button bindtap='onLogout'>退出登录</button>
</view>